<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorslide_3">

    <ImageView
        android:id="@+id/image3"
        android:src="@drawable/intro3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:foreground="@drawable/gradient_text_background"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/slide_title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/intro_slide_title_size"
        android:textStyle="bold"
        android:paddingStart="@dimen/intro_slide_padding_left"
        android:paddingEnd="@dimen/intro_slide_padding_left"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/slide_desc3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/slide_desc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_3_desc"
        android:textColor="@android:color/white"
        android:textSize="@dimen/intro_slide_desc_size"
        android:paddingStart="@dimen/intro_slide_padding_left"
        android:paddingEnd="@dimen/intro_slide_padding_left"
        android:layout_marginBottom="@dimen/intro_slide_bottom_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>