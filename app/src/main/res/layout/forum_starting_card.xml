<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/forum_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="@string/forum_start"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forum_sortbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="10dp"
            android:text="Sort"
            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/textColor"
            android:layout_below="@+id/forum_interestbutton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/forum_filterbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/forum_interestbutton"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="?android:attr/actionModeFindDrawable"
            android:drawablePadding="10dp"
            android:text="Filter"
            android:textColor="@color/textColor"
            android:textSize="@dimen/standard_text_size" />

        <TextView
            android:id="@+id/forum_interestbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:drawableStart="@android:drawable/ic_input_add"
            android:drawablePadding="5dp"
            android:text="Add To Interest"
            android:textColor="@color/textColor"
            android:textSize="@dimen/standard_text_size"
            android:layout_below="@id/forum_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/forum_sortbutton"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ask_Question"
                android:textColor="@color/textColor"
                android:textSize="@dimen/standard_text_size"/>

            <EditText
                android:id="@+id/forum_query_edittext"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Type your query here"
                android:textColor="@color/textColor"
                android:inputType="textCapSentences"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>